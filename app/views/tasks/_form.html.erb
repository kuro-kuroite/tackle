<div class="row mt-5">
  <div class="col">
    <%= form_with(model: task, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :deadline %>
        <%= f.text_field :deadline, class: "form-control flatpickr" %>
      </div>
      <%# FIXME: tasks.coffee で設定してもうまく反映できない  %>
      <script>
        const config = {
          defaultDate: "today",
          enableTime: true,
          minDate: "today",
          locale: "ja",
          time_24hr: true,
        };

        flatpickr('.flatpickr', config);
      </script>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
