<%= form_with(model: task, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
